{
  "name": "music-fairy-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "my-desktop-app/main.cjs",
  "scripts": {
    "vite": "vite",
    "electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
