    "preview": "vite preview"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@tonejs/midi": "^2.0.28",
    "cross-env": "^10.0.0",
    "lit": "^3.1.2",
    "socket.io-client": "^4.7.4",
    "tone": "^15.0.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^8.2.2",
    "electron": "^22.3.27",
    "eslint": "^8.57.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  }
